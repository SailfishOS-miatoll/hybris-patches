---
 rootdir/init.rc | 8 --------
 1 file changed, 8 deletions(-)

diff --git a/rootdir/init.rc b/rootdir/init.rc
index 4a13bfc461bd79fb5d9eb93225174c0ee6c90df0..da39bfbb4a72cb5f8598867debe4d40f1b39997e 100644
--- a/rootdir/init.rc
+++ b/rootdir/init.rc
@@ -35,14 +35,6 @@ on early-init
 
     mkdir /acct/uid
 
-    # memory.pressure_level used by lmkd
-    chown root system /dev/memcg/memory.pressure_level
-    chmod 0040 /dev/memcg/memory.pressure_level
-    # app mem cgroups, used by activity manager, lmkd and zygote
-    mkdir /dev/memcg/apps/ 0755 system system
-    # cgroup for system_server and surfaceflinger
-    mkdir /dev/memcg/system 0550 system system
-
     # symlink the Android specific /dev/tun to Linux expected /dev/net/tun
     mkdir /dev/net 0755 root root
     symlink ../tun /dev/net/tun
